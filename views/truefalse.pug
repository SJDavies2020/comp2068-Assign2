block content
	//- Bootstrap content below
	.truefalseSection
		h1.Heading1
			h1.text-center True / False Surveys
			br
			.container-fluid
				.row
					form
						label#Sn Survey Name: 
						input#sName(type='text', name='surveyName')
					br
				.row
					br
					hr
					form#question
						.form-group
							label(for='question') Question : 
						input#quest(type='text', name='question')
						label.radio-inline
							input.quest#qtrue(type='radio', name='quest1',value=1)
							| True
						label.radio-inline
							input.quest#qfalse(type='radio', name='quest1',value=0)
							| False
						button#btn1.btn.btn-primary Add Question
						button#btn2.btn.btn-primary Save Survey
					hr
				.row
					form
						.form-group
							h3 Survey:
							ul.list-group#surID


